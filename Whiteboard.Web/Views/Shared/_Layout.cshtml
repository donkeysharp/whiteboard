@{
    Layout = "~/Views/Shared/_Master.cshtml";
}
@section SideBar {
    @RenderSection("SideBar", required: false)
}

<!-- begin PAGE TITLE ROW -->
<div class="row">
    <div class="col-lg-12">
        <div class="page-title">
            <h1>@ViewBag.RouteMap.Title <small>@ViewBag.RouteMap.Description</small></h1>
            <ol class="breadcrumb">
                <li>
                    <i class="fa fa-dashboard"></i>  <a href="/">@ViewBag.RouteMap.RouteList[0]</a>
                </li>
                @for (var i = 1; i < ViewBag.RouteMap.RouteList.Length; ++i) {
                    <li class="active">@ViewBag.RouteMap.RouteList[@i]</li>
                }
            </ol>
        </div>
    </div>
    <!-- /.col-lg-12 -->
    @RenderBody()    
</div>
<!-- /.row -->
<!-- end PAGE TITLE ROW -->
@section Scripts {
    @RenderSection("Scripts", required: false)
}