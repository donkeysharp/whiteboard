<script type="text/template" id="tpl-school-dashboard">
    <div style="position: relative; width: 330px;">
        <h1 float: left;><%= coursesTitle %></h1>
        <a href="/course/list" style="position: absolute; top:7px; right:0;">Manage Courses</a>
    </div>
    <ul id="course-list" style="list-style: none"></ul>

    <h1><%= teachersTitle %></h1>
    <ul id="teacher-list" style="list-style: none"></ul>
    
    <h1><%= studentsTitle %></h1>
    <ul id="student-list" style="list-style: none"></ul>
</script>
<script type="text/template" id="tpl-dashboard">
    <h1><%= title %></h1>
    <ul id="course-list" style="list-style: none"></ul>
</script>
<script type="text/template" id="tpl-course-item">
    <div class="course-item">
        <img src="<%= PictureUrl %>" />
        <h3><a href="/course/<%= Id %>"><%= Title %></a></h3>
        <p><%= Description %></p>
    </div>
</script>
<script type="text/template" id="tpl-teacher-item">
    <div>
        <img src="<%= PictureUrl %>" />
        <h2><%= Name %></h2>
    </div>
</script>

<script type="text/template" id="tpl-student-item">
    <div>
        <img src="<%= PictureUrl %>" />
        <h2><%= Name %></h2>
    </div>
</script>
