 <div class="row">
    <div class="col-lg-10 col-md-offset-2">
    <div style="margin-top: 10px;margin-left: auto; margin-right: auto">
    <div class="col-lg-2 col-sm-6">
        <div class="circle-tile">
            <div class="circle-tile-heading red">
                <i class="fa fa-comments fa-fw fa-3x"></i>
            </div>
            <div class="circle-tile-content red">
                <div class="circle-tile-description text-faded">
                </div>
                <div class="circle-tile-number text-faded">
                    @ViewBag.OurCourses.Count Courses
                </div>
                <a href="#ourCourses" class="circle-tile-footer">More Info <i class="fa fa-chevron-circle-right"></i></a>
            </div>
        </div>
    </div>
    <div class="col-lg-2 col-sm-6">
        <div class="circle-tile">
            <div class="circle-tile-heading orange">
                <i class="fa fa-pencil fa-fw fa-3x"></i>
            </div>
            <div class="circle-tile-content orange">
                <div class="circle-tile-description text-faded">
                </div>
                <div class="circle-tile-number text-faded">
                    @ViewBag.OurTeachers.Count Teachers
                </div>
                <a href="#ourTeachers" class="circle-tile-footer">More Info <i class="fa fa-chevron-circle-right"></i></a>
            </div>
        </div>
    </div>
    <div class="col-lg-2 col-sm-6">
        <div class="circle-tile">
            <div class="circle-tile-heading blue">
                <i class="fa fa-users fa-fw fa-3x"></i>
            </div>
            <div class="circle-tile-content blue">
                <div class="circle-tile-description text-faded">
                </div>
                <div class="circle-tile-number text-faded">
                    @ViewBag.OurStudents.Count Students
                    <span id="sparklineB"></span>
                </div>
                <a href="#ourStudents" class="circle-tile-footer">More Info <i class="fa fa-chevron-circle-right"></i></a>
            </div>
        </div>
    </div>
    </div>
    </div>
</div>
<!-- Our courses info -->
<div class="row">
<div class="col-lg-8 col-md-offset-2">
    <div class="dashboard">
        <div class="portlet portlet-red">
            <div class="portlet-heading">
                <div class="portlet-title">
                    <h4><i class="fa fa-comments fa-fw"></i> Our Courses</h4>
                </div>
                <div class="portlet-widgets">
                    <a data-toggle="collapse" data-parent="#accordion" href="#ourCourses"><i class="fa fa-chevron-down"></i></a>
                </div>
                <div class="clearfix"></div>
            </div>
            <div id="ourCourses" class="panel-collapse collapse in">
            <div class="portlet-body">
                <div class="row">
                @foreach (var x in ViewBag.OurCourses) {
                    <a href="/course/@x.Id">
                    <div class="col-md-5 course-item">
                        <img src="@Url.Content(x.PictureUrl)" />
                        <div class="course-body">
                            <h4>@x.Title</h4>
                            <span>@x.TeacherName</span>
                        </div>
                    </div>
                    </a>
                }
                </div>
            </div>
            </div>
        </div>
    </div>
</div>
</div>
